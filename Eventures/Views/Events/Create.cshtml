@using Microsoft.AspNetCore.Mvc.ModelBinding
@model CreateEventFormModel

@{
    ViewData["Title"] = "Create Event";
}


<form method="post" class="col-8 offset-2 text-center font-weight-bold">
    <h3 style="margin-bottom: 5%">Create Event</h3>
    <hr />
    <div class="form-row justify-content-center">
        <div class="form-group col-4">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" placeholder="Enter event name here...">
            <span asp-validation-for="Name" class="small text-danger"></span>
        </div>
        <div class="form-group col-4">
            <label asp-for="Place"></label>
            <input asp-for="Place" class="form-control" placeholder="Enter event place here...">
            <span asp-validation-for="Place" class="small text-danger"></span>
        </div>
        <div class="form-group col-4">
            <label asp-for="CityId"></label>
            <select asp-for="CityId" class="form-control">
                @foreach (var city in Model.Cities)
                {
                    <option value="@city.Id">@city.Name</option>
                }
            </select>
            <span asp-validation-for="CityId" class="small text-danger"></span>
        </div>
    </div>
    <hr />
    <div class="form-row justify-content-center">
        <div class="form-group col-6">
            <label asp-for="Start"></label>
            <input asp-for="Start" class="form-control" placeholder="When event will start...">
            <span asp-validation-for="Start" class="small text-danger"></span>
        </div>
        <div class="form-group col-6">
            <label asp-for="End"></label>
            <input asp-for="End" class="form-control" placeholder="When event will end...">
            <span asp-validation-for="End" class="small text-danger"></span>
        </div>
    </div>
    <hr />
    <div class="form-row justify-content-center">
        <div class="form-group col-6">
            <label asp-for="TotalTickets"></label>
            <input asp-for="TotalTickets" class="form-control" placeholder="Enter total tickets count...">
            <span asp-validation-for="TotalTickets" class="small text-danger"></span>
        </div>
        <div class="form-group col-6">
            <label asp-for="PricePerTicket"></label>
            <input asp-for="PricePerTicket" class="form-control" placeholder="Price per ticket...">
            <span asp-validation-for="PricePerTicket" class="small text-danger"></span>
        </div>
    </div>
    <hr/>
    <input class="btn btn-primary" type="submit" value="Create event" style="background-color: aqua; color: black"/>
</form>

<style>
    hr {
        background-color: aqua;
        height: 2px
    }
</style>